{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/componenets/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@content/*": [
        "src/content/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
