---
import { Image } from "astro:assets";
import Link from "./Link.astro";
import svgEnvelope from "@assets/envelope.svg";
import { type Person } from "@content/config";

interface Props extends Person {}

const { image, name, url, contact, officeHours } = Astro.props;
---

<div class="flex space-x-2">
  <Image src={image} alt="Profile image" width={100} class="m-0" />
  <div class="flex flex-col align-top">
    <Link href={url} new-tab>{name}</Link>
    <div class="flex space-x-1">
      <span>
        {contact}
      </span>
      <a href=`mailto:${contact}` class="flex flex-col justify-center">
        <img
          src={svgEnvelope.src}
          alt="Send email"
          class="aspect-square w-4 m-0"
        />
      </a>
    </div>
    <div><i>Konsultacije:</i> {officeHours}</div>
  </div>
</div>
